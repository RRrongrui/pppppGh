<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--轮播图-->
    <spfworld.spfworld.carousel.view.Banner
        android:id="@+id/store_view"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        app:banner_change_duration="0"
        app:banner_pause_duration="2000">
    </spfworld.spfworld.carousel.view.Banner>
    <!--点击事件-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="#e0e0e0"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/store_one_ll"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/store_one_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#525252"
                    android:text="天然螺旋藻配方" />
                <TextView
                    android:id="@+id/store_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/store_one_name"
                    android:layout_alignRight="@+id/store_one_name"
                    android:textSize="12sp"
                    android:textColor="#e57303"
                    android:text="好物推荐" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/store_one_img"
                android:background="#ffffff"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/store_two_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/store_two_img"
                    android:background="#ffffff"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_weight="6" />
                <RelativeLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/store_two_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="#525252"
                        android:text="精品饵料添加剂" />
                    <TextView
                        android:id="@+id/store_two_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/store_two_name"
                        android:layout_alignRight="@+id/store_two_name"
                        android:textSize="12sp"
                        android:textColor="#e57303"
                        android:text="一周特价推荐" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/store_th_ll"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:src="@mipmap/store_limit"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp">
                        <TextView
                            android:id="@+id/today_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#525252"
                            android:textSize="12sp"
                            android:text="限时抢购"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/today_text"
                            android:layout_alignRight="@+id/today_text"
                            android:textColor="#e57303"
                            android:textSize="9sp"
                            android:text="即将来袭"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/footprint_LL"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:src="@mipmap/store_footprint"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp">
                        <TextView
                            android:id="@+id/limit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#525252"
                            android:textSize="12sp"
                            android:text="浏览足迹"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_below="@+id/limit_text"
                            android:layout_alignRight="@+id/limit_text"
                            android:textColor="#e57303"
                            android:textSize="9sp"
                            android:text="已看商品"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>