<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="订单号:"
            android:textColor="#4a4a4a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_left_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_left"
            android:text="11012016"
            android:textColor="#4a4a4a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="交易成功"
            android:textColor="#fe9603"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="15dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="12dp">

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/linear"
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="82dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_ordertilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秋季国际登山比赛"
                android:textColor="#323232"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_picture"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:text="时间:"
            android:textColor="#969698"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_up_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.9.12"
            android:textColor="#969698"
            android:textSize="11sp"
            android:layout_alignTop="@+id/tv_up_time"
            android:layout_toEndOf="@+id/tv_down_right" />

        <TextView
            android:id="@+id/tv_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_up_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="地点:"
            android:textColor="#949494"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_middle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_middle"
            android:layout_toRightOf="@+id/tv_middle"
            android:text="上海市泰宏路168号"
            android:textColor="#949494"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_middle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="数量:"
            android:textColor="#949494"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_down_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#949494"
            android:textSize="11sp"
            android:layout_alignTop="@+id/tv_down"
            android:layout_toEndOf="@+id/tv_down"
            android:layout_marginStart="11dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张"
            android:textColor="#949494"
            android:textSize="11sp"
            android:layout_alignTop="@+id/tv_down_right"
            android:layout_toEndOf="@+id/tv_down_right"
            android:layout_marginStart="11dp"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="$"
            android:textColor="#323232"
            android:textSize="14sp"
            android:id="@+id/textView2"
            android:layout_marginEnd="45dp"
            android:layout_alignTop="@+id/tv_price"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="100"
            android:textColor="#323232"
            android:textSize="14sp"
            android:id="@+id/tv_price"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginStart="11dp" />

    </RelativeLayout>

</LinearLayout>