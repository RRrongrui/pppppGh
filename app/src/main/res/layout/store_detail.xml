<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <!--轮播图-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:background="#ffffff">
            <spfworld.spfworld.carousel.view.Banner
                android:id="@+id/main_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:banner_change_duration="0"
                app:banner_pause_duration="2000"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:paddingLeft="15dp"
            android:paddingTop="18dp"
            android:paddingRight="25dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/store_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:textSize="17sp"
                android:textColor="#303030"
                android:text=""/>
             <TextView
                android:id="@+id/store_detail_mony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/store_detail_name"
                android:textSize="17sp"
                android:textColor="#f04848"
                android:text=""/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="#f0f0f0"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:text="商品简介:"/>
            <WebView
                android:id="@+id/detail_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/store_detail_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="3"
            android:src="@mipmap/pond_back"/>
        <TextView
            android:id="@+id/pondDetail_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#000000"
            android:text="商品详情"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3">
        </LinearLayout>
    </LinearLayout>
    <!--底部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f0f0f0"></View>
        <LinearLayout
            android:id="@+id/store_detail_collction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/collction_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="10dp"/>
                <TextView
                    android:id="@+id/collction_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:textColor="#717171"
                    android:textSize="11sp"/>
            <TextView
                android:id="@+id/store_detail_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="#fe9402"
                android:text="直达链接"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>