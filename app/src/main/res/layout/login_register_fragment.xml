<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_head"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/register_loginBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="3"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/find_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="注册"/>
        <ImageView
            android:id="@+id/pond_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#9a9a9a"
        android:layout_marginTop="20dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <EditText
            android:id="@+id/register_phone"
            android:digits="1234567890"
            android:maxLength="11"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textColorHint="#9a9a9a"
            android:background="#ffffff"
            android:hint="手机号"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9a9a9a"
            android:layout_marginLeft="20dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/register_verification_et"
            android:digits="1234567890"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:maxLength="6"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textColor="#000000"
            android:textColorHint="#9a9a9a"
            android:background="#ffffff"
            android:hint="验证码"/>
            <TextView
                android:id="@+id/register_verification_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/yuanxing"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:text="获取验证码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#9a9a9a"></View>
    </LinearLayout>
    <TextView
        android:id="@+id/register_butn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/register_btn"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#eef0ed"
        android:text="注册"/>


</LinearLayout>