<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--头部-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/merchandise_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="3"
                android:src="@mipmap/pond_back"/>
            <TextView
                android:id="@+id/pondDetail_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textSize="19sp"
                android:textColor="#000000"
                android:text="选择商品"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="3">
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#6e6e6e"
            android:textSize="13dp"
            android:text="选择时间"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/merchandise_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f0f0f0"></View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/merchandise_recyclerView_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:scrollbars="none">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#6e6e6e"
            android:textSize="13dp"
            android:text="价格"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/merchandise_mony"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textColor="#222222"
                android:textSize="14sp"
                android:text="￥100.00"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#6e6e6e"
            android:textSize="13dp"
            android:text="选择数量"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/merchandise_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/event_subtract_false"/>
            <TextView
                android:id="@+id/merchandise_text"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#6b6b6b"
                android:text="1"/>
            <ImageView
                android:id="@+id/merchandise_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/event_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#6b6b6b"
                android:text="="/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#40c8ee"
                android:text="￥"/>
            <TextView
                android:id="@+id/merchandise_mony_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#40c8ee"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/merchandise_apply"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#ff3742"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:text="下一步">
    </TextView>
</RelativeLayout>