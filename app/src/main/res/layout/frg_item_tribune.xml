<?xml version="1.0" encoding="utf-8"?>
<spfworld.spfworld.widget.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/person_head"
            android:layout_width="39dp"
            android:layout_marginLeft="17dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="钓客"
            android:textSize="12sp"
            android:textColor="#282828"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv"
            android:layout_marginTop="17dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_content"
            android:textColor="#282828"
            android:layout_width="wrap_content"
            android:text="原始森林第六挖宝藏，徒步5小时绝对刺激"
            android:layout_below="@+id/tv_title"
            android:textSize="19sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/iv"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_info"
            android:textColor="#87888c"
            android:layout_width="wrap_content"
            android:text="今天收获颇丰，天气好，鱼好，心情自然好"
            android:layout_below="@+id/tv_content"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/iv"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:id="@+id/iv1"
            android:layout_marginRight="2dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="140dp"
            android:layout_height="140dp" />

        <ImageView
            android:background="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:id="@+id/iv2"
            android:src="@mipmap/ic_launcher"
            android:layout_width="140dp"
            android:layout_height="140dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="1"
            android:textSize="12sp"
            android:id="@+id/tv_minute"
            android:textColor="#b5b5b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="分钟前"
            android:textSize="12sp"
            android:textColor="#b5b5b5"
            android:layout_toRightOf="@+id/tv_minute"
            android:id="@+id/minute_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_comment"
            android:text="266"
            android:textSize="12sp"
            android:textColor="#b5b5b5"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_marginRight="7dp"
            android:src="@mipmap/img_reply"
            android:layout_toLeftOf="@+id/tv_comment"
            android:layout_width="14dp"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/tv_love"
            android:text="210"
            android:textSize="12sp"
            android:textColor="#b5b5b5"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_love"
            android:layout_marginRight="7dp"
            android:src="@mipmap/img_like"
            android:layout_toLeftOf="@+id/tv_love"
            android:layout_width="14dp"
            android:layout_height="14dp" />
    </RelativeLayout>



</spfworld.spfworld.widget.percent.PercentRelativeLayout>