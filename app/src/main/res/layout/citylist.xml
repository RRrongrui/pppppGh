<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_head"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/city_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_weight="4"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/city_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="切换城市"/>
        <ImageView
            android:id="@+id/city_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_weight="4"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="#c9ebee" >

        <EditText
            android:id="@+id/input_search_query"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_search"
            android:paddingLeft="10dp"
            android:background="@mipmap/serch"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textSize="15sp"
            android:textColorHint="#a5a5a5"
            android:hint="请输入城市名"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#eeeeee">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#999999"
                android:text="当前定位"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="128dp"
                android:layout_marginLeft="10dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:background="#ffffff"
                android:textSize="15sp"
                android:textColor="#323232"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#999999"
                android:text="热门城市"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/city1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="北京"/>
                <TextView
                    android:id="@+id/tv_city2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="三亚"/>
                <TextView
                    android:id="@+id/tv_city3"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="西安"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/city4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="武汉"/>
                <TextView
                    android:id="@+id/tv_city5"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="上海"/>
                <TextView
                    android:id="@+id/tv_city6"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="深圳"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/city7"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="宁波"/>
                <TextView
                    android:id="@+id/tv_city8"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="南京"/>
                <TextView
                    android:id="@+id/tv_city9"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="温州"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/searchBarContainer" >

        <spfworld.spfworld.utils.city.ContactListViewImpl
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:cacheColorHint="#ffffff"
            android:divider="@drawable/line"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="#FFFFFF"
            android:smoothScrollbar="true" />
    </LinearLayout>

</LinearLayout>