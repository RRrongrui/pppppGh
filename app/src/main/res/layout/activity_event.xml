<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="spfworld.spfworld.activity.EventActivity">
    <!--头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_head"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/event_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_weight="3"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/event_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#ffffff"
            android:text="活动"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/btn_recommed"
            android:onClick="MyOclick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/selector_event"
            android:checked="true"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:text="推荐"/>
        <RadioButton
            android:id="@+id/btn_registration"
            android:onClick="MyOclick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/selector_event"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:text="报名中"/>
        <RadioButton
            android:id="@+id/btn_underway"
            android:onClick="MyOclick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/selector_event"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:text="进行中"/>
        <RadioButton
            android:id="@+id/btn_history"
            android:onClick="MyOclick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/selector_event"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textSize="15sp"
            android:text="历史"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/event_viewpager_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    </android.support.v4.view.ViewPager>

</LinearLayout>
