<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <spfworld.spfworld.carousel.view.Banner
            android:id="@+id/pond_detail_banner"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:banner_change_duration="0"
            app:banner_pause_duration="2000">
        </spfworld.spfworld.carousel.view.Banner>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_marginTop="26dp">
    <TextView
        android:id="@+id/pondDetail_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#1d1d1d"
        android:textSize="16dp"
        android:text=""
        />
    <ImageView
        android:id="@+id/detail_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/pond_go"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/pondDetail_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5f5f5f"
            android:textSize="12sp"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="26dp">
        <ImageView
            android:id="@+id/pond_detail_phone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/pond_phone"/>
        <RelativeLayout
            android:id="@+id/daohang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/pond_navigation"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#a0ffffff"></View>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f5f5f5"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pond_go"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#6b6b6b"
            android:text="钓场说明"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/pond_detail_jigging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pond_jigging_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textColor="#6b6b6b"
            android:text="钓法不限"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pond_detail_bait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pond_bait_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:text="不允许活饵"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pond_detail_scat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pond_scat_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:text="不允许打窝"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pond_detail_rud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pond_rud_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:textColor="#6b6b6b"
                android:text="不限竿"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="26dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="14sp"
            android:text="【钓位数量】"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/detail_Num"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:gravity="center"
            android:background="@drawable/selector_pond_detail_text"
            android:textColor="#969495"
            android:textSize="12sp"
            android:text="限号"/>
        <TextView
            android:id="@+id/detail_nNum"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:background="@drawable/selector_pond_detail_text"
            android:textColor="#969495"
            android:textSize="12sp"
            android:text="不限号"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="14sp"
            android:text="【收费方式】"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="36dp"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/detail_charge_j"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:layout_marginRight="9dp"
            android:gravity="center"
            android:background="@drawable/selector_pond_detail_text"
            android:textColor="#969495"
            android:textSize="12sp"
            android:text="按斤收费"/>
        <TextView
            android:id="@+id/detail_charge_t"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/selector_pond_detail_text"
            android:textColor="#969495"
            android:textSize="12sp"
            android:text="按天收费"/>
        <TextView
            android:id="@+id/detail_nCharge"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="18dp"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:background="@drawable/selector_pond_detail_text"
            android:textColor="#969495"
            android:textSize="12sp"
            android:text="不收费"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f7f7f7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pond_detail_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="3"
            android:src="@mipmap/pond_back"/>
        <TextView
            android:id="@+id/pondDetail_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#000000"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/pond_collct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/selector_pond_detail_collct"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>